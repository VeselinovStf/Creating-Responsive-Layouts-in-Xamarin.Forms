<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.MainPage"
             Title="Responsive Layouts in Xamarin.Forms"
             >

    <StackLayout  Spacing="5" Margin="10">

        <Button Text="ScrollView and Frame Demo" Clicked="ScrollViewAndDemo_OnButtonClick"/>
        <Button Text="RelativeLayout Demo" Clicked="RelativeLayoutDemo_OnButtonClick"/>
        <Button Text="StackLayout Demo" Clicked="StackLayoutDemo_OnButtonClick"/>
        <Button Text="NestedStack Demo" Clicked="NestedStackDemo_OnButtonClick"/>
        <Button Text="Grid Demo" Clicked="GridDemo_OnButtonClick"/>
        <Button Text="Flex Demo" Clicked="FlexDemo_OnButtonClick"/>
        <Button Text="Calculator Demo" Clicked="CalculatorDemo_OnButtonClick"/>
        <Button Text="Catalog Demo" Clicked="CatalogDemo_OnButtonClick"/>
    </StackLayout>


</ContentPage>